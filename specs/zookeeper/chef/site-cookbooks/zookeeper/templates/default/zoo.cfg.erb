tickTime=2000
initLimit=10
syncLimit=5
dataDir=<%= node[:zookeeper][:data_dir] %>
# the port at which the clients will connect
clientPort=<%= node[:zookeeper][:client_port] %>

<% if node[:zookeeper][:mode] == 'ensemble' -%>
# For single instance ZooKeeper do not list servers 
<% if node[:zookeeper][:members].length > 1 -%>
<% server_id = 1 -%>
<% node[:zookeeper][:members].each do |member| -%>
server.<%= server_id %>=<%= member %>:2888:3888
<% server_id += 1 -%>
<% end -%>
<% end -%>
<% end -%>
